<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slide2_img"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/image_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/slide_mobile" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="@dimen/_160dp"
        android:layout_height="@dimen/_260dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/slide2_mobile_img"
        app:layout_heightPercent="42%"
        app:layout_marginTopPercent="21.5%"
        app:layout_widthPercent="44%" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_60dp"
        android:layout_marginTop="@dimen/_50dp"
        android:text="@string/love_it_snap_it"
        android:textColor="@color/black"
        android:textSize="@dimen/_20dp" />
</android.support.percent.PercentRelativeLayout>